#include "CrazyRandomSword.h"
#include <ctime>
#include <cstdlib>
#include <iostream> 
using namespace std;

double CrazyRandomSword::randHit()
{
	srand((unsigned)time(0));

	int randHit;
	randHit = (rand() % 100 ) +7;
	cout << "rand hit: " << randHit << endl;
	hitPoints = randHit; 
	cout << "hit points: " << hitPoints << endl;
}
double CrazyRandomSword::hit(double armor) {
	srand((unsigned)time(0));
	int randArmor;
	int thirdArmor = armor * 1/3;	
	//randHit = (rand() % 100) +7;
	randArmor =(rand() % thirdArmor) + 2; 
	
	//hitPoints = randHit;
	
	cout << "hit Points " << hitPoints << endl;
	cout << "randArmor " << randArmor << endl;
	
	double damage = hitPoints - randArmor; 
    	
	
	if (damage < 0) {
        return 0;
    }

    return damage;
}
